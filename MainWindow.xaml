<Window x:Name="DHUD_Main" x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiaboticalHUDImporterExporter"
        mc:Ignorable="d"
        Title="Diabotical HUD Importer/Exporter" Height="400" Width="600" Background="#FF212A36" Foreground="White" ResizeMode="NoResize" Icon="dhuhIcon.jpg" WindowStyle="ToolWindow">
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="179*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Export" Grid.Column="1" HorizontalAlignment="Left" Margin="275,348.333,0,0" VerticalAlignment="Top" Width="75" Click="ExportDhud"/>
        <TextBlock x:Name="StatusText1" HorizontalAlignment="Left" Margin="92.717,370.293,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="35" Width="261.667" Grid.Column="1"/>
        <Button x:Name="SettingsBackupMenuItem" Grid.ColumnSpan="2" Content="Backup Settings" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Background="#FF185674" Foreground="White" BorderBrush="{x:Null}" Height="25"/>
        <Menu HorizontalAlignment="Left" Height="300" Margin="10,40,0,0" VerticalAlignment="Top" Width="135" Grid.ColumnSpan="2" Background="#FF185674">
            <MenuItem Header="Backup" Height="100" Width="100"/>
        </Menu>

    </Grid>
</Window>
