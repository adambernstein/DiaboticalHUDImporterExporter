<Window x:Name="DHUD_Main" x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Diabotical HUD Importer/Exporter" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="179*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="300" Margin="10,30,0,0" Stroke="Black" VerticalAlignment="Top" Width="350" Grid.ColumnSpan="2"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="300" Margin="356.041,30,0,0" Stroke="Black" VerticalAlignment="Top" Width="350" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Height="35" Margin="10,30,0,0" TextWrapping="Wrap" Text="Import HUD" VerticalAlignment="Top" Width="350" TextAlignment="Center" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Height="35" Margin="356.041,30,0,0" TextWrapping="Wrap" Text="Export HUD (.dhud)" VerticalAlignment="Top" Width="350" TextAlignment="Center" Grid.Column="1"/>
        <Button Content="Export" Grid.Column="1" HorizontalAlignment="Left" Margin="491,65,0,0" VerticalAlignment="Top" Width="75" Click="ExportDhud"/>
        <TextBlock x:Name="StatusText1" Grid.Column="1" HorizontalAlignment="Left" Margin="364,285,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="35" Width="335"/>
        <ScrollViewer x:Name="ScrollViewer1" Grid.Column="1" HorizontalAlignment="Left" Height="110" Margin="439,115,0,0" VerticalAlignment="Top" Width="135">
            <TextBox x:Name="TextFileContent" Height="1545" TextWrapping="Wrap" Text="TextBox" Width="120"/>
        </ScrollViewer>

    </Grid>
</Window>
